<?xml version="1.0" encoding="UTF-8"?>
<schemalist gettext-domain="dash2dock-lite">
  <schema path="/org/gnome/shell/extensions/dash2dock-lite/" id="org.gnome.shell.extensions.dash2dock-lite">
    <key type="b" name="reuse-dash">
        <default>false</default>
        <summary>Reuse existing Dash</summary>
        <description>Reuse existing Dash instead of creating another instance</description>
    </key>
    <key type="b" name="app-button">
        <default>false</default>
        <summary>App Button</summary>
        <description>Show apps and overview button</description>
    </key>
    <key type="b" name="shrink-icons">
        <default>true</default>
        <summary>Shrink icons</summary>
        <description>Shrink dash icons</description>
    </key>
    <key type="b" name="animate-icons">
        <default>true</default>
        <summary>Animate Icons</summary>
        <description>Animate dash icons on hover</description>
    </key>
    <key type="b" name="autohide-dash">
        <default>false</default>
        <summary>Autohide dash panel</summary>
        <description>Animate dash icons on hover</description>
    </key>
    <key type="b" name="background-dark">
        <default>true</default>
        <summary>Dark background</summary>
        <description>Use dark color for dash background</description>
    </key>
    <key type="d" name="background-opacity">
        <default>1</default>
        <summary>Background opacity</summary>
        <description>Set dash background opacity</description>
    </key>
  </schema>
</schemalist>
